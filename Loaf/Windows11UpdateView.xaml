            <StackPanel VerticalAlignment="Center">
                <ProgressRing
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    IsActive="True" />
                <TextBlock
                    x:Name="UpdatingElement"
                    Foreground="White"
                    Text="正在进行更新" />
                <TextBlock x:Uid="UpdatingHint" Text="请保持计算机打开状态。" />
            </StackPanel>
            <TextBlock
                x:Uid="RestartHint"
                Margin="0,0,0,104"
                VerticalAlignment="Bottom"
                Text="计算机可能会重启几次" />
        </Grid>
        <Button
            x:Name="EscButton"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Opacity="0" />
