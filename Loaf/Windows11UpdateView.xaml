                                            Style="{StaticResource ProgressRingEllipseStyle}" />
                                    </Canvas>
                                    <Canvas RenderTransformOrigin=".5,.5">
                                        <Canvas.RenderTransform>
                                            <RotateTransform x:Name="E3R" />
                                        </Canvas.RenderTransform>
                                        <Ellipse
